# Environment
NODE_ENV=development  # Change to 'production' in production

# Server
PORT=3000

# MongoDB (Development)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/coinz-dev?retryWrites=true&w=majority

# MongoDB (Production)
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/coinz-prod?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend URLs (for CORS)
FRONTEND_DEV_URL=http://localhost:5500
FRONTEND_PROD_URL=https://spinmycoin.netlify.app

# Logging
LOG_LEVEL=debug  # error, warn, info, debug

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=your_session_secret_here
COOKIE_SECURE=false  # Set to true in production with HTTPS
